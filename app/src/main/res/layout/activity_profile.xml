<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".actvities.ProfileActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/my_profile_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/toolbartitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="72dp"
                android:gravity="center"
                android:text="Profile"
                android:textColor="@color/white"
                android:textSize="23dp"
                android:textStyle="bold" />


        </androidx.appcompat.widget.Toolbar>

        <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="15dp"
        app:civ_border_width="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/my_profile_toolbar"
            app:layout_constraintWidth_percent=".8"/>









    <EditText
        android:layout_width="0dp"
        android:id="@+id/profile_name"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_bg"
        android:hint="Your Name"
        android:padding="13dp"
        android:layout_marginTop="20dp"
        android:drawableTint="@color/black"
        android:drawableLeft="@drawable/ic_baseline_account_circle"
        android:drawablePadding="10dp"
        android:elevation="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_image"
        app:layout_constraintWidth_percent=".8"/>

    <EditText
        android:layout_width="0dp"
        android:id="@+id/profile_email"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_bg"
        android:hint="Your Email"
        android:padding="13dp"
        android:layout_marginTop="20dp"
        android:drawableTint="@color/black"
        android:drawableLeft="@android:drawable/sym_action_email"
        android:drawablePadding="10dp"
        android:elevation="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_name"
        app:layout_constraintWidth_percent=".8"/>


    <EditText
        android:layout_width="0dp"
        android:id="@+id/profile_password"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_bg"
        android:hint="Your Password"
        android:padding="13dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@android:drawable/ic_lock_lock"
        android:drawablePadding="10dp"
        android:drawableTint="@color/black"
        android:elevation="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_email"
        app:layout_constraintWidth_percent=".8"/>

    <Button
        android:id="@+id/update"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:outlineAmbientShadowColor="@color/white"
        android:text="Update"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:drawableLeft="@android:drawable/ic_menu_upload_you_tube"
        android:drawableTint="@color/black"
        android:backgroundTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_password"
        app:layout_constraintWidth_percent=".8" />

    <Button
        android:id="@+id/update2"
        android:layout_width="300dp"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:outlineAmbientShadowColor="@color/black"
        android:backgroundTint="@color/white"
        android:drawableLeft="@android:drawable/ic_menu_camera"
        android:drawableTint="@color/black"
        android:text="Add Profile Picture"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update"
        app:layout_constraintWidth_percent=".8" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>